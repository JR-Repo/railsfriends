<div class="card">
  <div class="card-header">
    <h4>Log in</h4>
  </div>
  <div class="card-body">
    <p class="card-text"><%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group mb-3">
    <%= f.email_field :email, autofocus: true,
    class:"form-control",
    placeholder:"First Name",
    autocomplete: "email" %>
  </div>

  <div class="field form-group mb-3">
    <%= f.password_field :password,
    class:"form-control",
    placeholder:"First Name",
    autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class= "field form-check mb-3">
      <%= f.check_box :remember_me,
      class: "form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %></p>
    <div class="actions">
    <%= f.submit "Log in",
    class: 'btn btn-secondary' %>
   </div>
  </div>
</div>

<% end %>
<br/>

<%= render "devise/shared/links" %>
